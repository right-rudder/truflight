---
import { FaDotCircle } from "react-icons/fa";
import ImageComp from "../components/ImageComp.astro";
import { FaHelicopter } from "react-icons/fa6";
import CTA from "../components/CTA.astro";
import Breadcrumb from "../components/Breadcrumb.astro";

const { data } = Astro.props;
---

<section class="mx-auto my-24 max-w-2xl lg:max-w-6xl">
  <div class="mb-10 px-4 lg:px-12">
    <ImageComp
      src={data.secondaryImage}
      alt={data.secondaryAlt}
      classes="aspect-video h-[30rem] object-cover w-full rounded-xl"
    />
  </div>
  <div class="mx-auto flex max-w-7xl flex-col gap-20 px-4 lg:px-12">
    <aside class="flex flex-1 flex-col gap-10 lg:flex-row">
      <div
        class="bg-dark-gray flex flex-1 flex-col gap-5 rounded-lg p-10 text-white"
      >
        <h4 class="text-3xl">Prerequisites</h4>
        <hr />
        <ul class="mt-3 flex flex-col gap-2">
          {
            data.prerequisites.map((step: string) => (
              <li class="flex gap-2">
                <FaDotCircle className="text-primary-500 size-3 shrink-0 mt-[6px]" />
                <div set:html={step} />
              </li>
            ))
          }
        </ul>
        {
          data.slug == "cfi-helicopter-add-on" ? null : (
            <span class="mb-3 text-sm font-medium">*Minimum required hours</span>
          )
        }
        <a
          href="/enrollment-form"
          class="btn-secondary hover:border-primary-500! border-white! text-white!"
          >Sign Up</a
        >
      </div>

      <div
        class="flex flex-1 flex-col gap-5 rounded-lg bg-white p-10 shadow-[0_0_25px_rgb(239,112,22)]"
      >
        <div class="bg-primary-500 w-fit rounded-full p-3">
          <FaHelicopter className="size-10 text-white" />
        </div>
        <h4 class="text-3xl">Discovery Flight</h4>
        <hr />
        <p class="text-sm tracking-wider text-gray-700 lg:text-base">
          Explore like never before! Book a Discovery Flight and experience the
          thrill of flying a helicopter firsthand. No commitment, just pure
          adventure.
        </p>
        <a
          href="/discovery-flight"
          class="btn-secondary text-primary-500! border-primary-500! w-full px-5! whitespace-nowrap hover:text-white!"
          target="_blank">Schedule Now</a
        >
      </div>
    </aside>
    <div class="flex flex-1 flex-col gap-5">
      <div class="flex flex-col gap-5">
        <h2
          class="font-display text-4xl font-black tracking-wide text-pretty italic sm:text-5xl"
        >
          {data.title}
        </h2>
        {
          data.description.map((description: string) => (
            <p
              class="tracking-wider text-gray-700 lg:text-lg"
              set:html={description}
            />
          ))
        }
        {
          data.programs &&
            data.programs.map(
              (program: { title: string; description: string }) => (
                <p class="text-gray-600 lg:text-lg">
                  <span class="text-main-black font-semibold">
                    {program.title}:{" "}
                  </span>
                  {program.description}
                </p>
              )
            )
        }
      </div>
    </div>
  </div>

  <CTA
    text="Ready to shed your wings and take controls of a helicopter? <br /> All you need is hours!"
  />
</section>
<Breadcrumb items={[{ name: data.title }]} />
