---
import { FaDotCircle } from "react-icons/fa";
import ImageComp from "../components/ImageComp.astro";
import { FaHelicopter } from "react-icons/fa6";
import CTA from "../components/CTA.astro";

const { data } = Astro.props;
---

<section class="mx-auto my-24 max-w-2xl lg:max-w-6xl">
  <div class="mb-10 px-5">
    <ImageComp
      src={data.secondaryImage}
      alt={data.secondaryAlt}
      classes="aspect-video h-[25rem] object-cover w-full rounded-xl"
    />
  </div>
  <div class="mx-auto flex max-w-7xl flex-col-reverse gap-20 px-5 lg:flex-row">
    <div class="flex flex-[2_2_0] flex-col gap-5">
      <div class="flex flex-col gap-5">
        <h2
          class="font-display max-w-lg text-4xl font-black tracking-wide text-pretty italic sm:text-5xl"
        >
          {data.title}
        </h2>
        {
          data.description.map((description: string) => (
            <p
              class="tracking-wider text-gray-700 lg:text-lg"
              set:html={description}
            />
          ))
        }
        {
          data.programs &&
            data.programs.map(
              (program: { title: string; description: string }) => (
                <p class="text-gray-600 lg:text-lg">
                  <span class="text-main-black font-semibold">
                    {program.title}:{" "}
                  </span>
                  {program.description}
                </p>
              ),
            )
        }
      </div>

      {
        data.steps && (
          <div>
            <h3 class="font-display text-3xl font-bold">
              Course Completion Requirements
            </h3>
            <ul class="mt-5 flex flex-col gap-7">
              {data.steps.map(
                (step: { icon: any; title: string; description: string }) => (
                  <li class="flex gap-5">
                    <div class="bg-primary-500 h-fit w-fit p-2 text-white">
                      <step.icon />
                    </div>
                    <div class="flex-flex-col">
                      <div>
                        <p
                          class="max-w-lg text-2xl font-semibold tracking-tight text-pretty"
                          set:html={step.title}
                        />
                        <p
                          class="text-sm tracking-wider text-gray-700 lg:text-base"
                          set:html={step.description}
                        />
                      </div>
                    </div>
                  </li>
                ),
              )}
            </ul>
          </div>
        )
      }
    </div>

    <aside class="mx-auto flex max-w-xl flex-1 flex-col gap-10">
      <div class="bg-dark-gray flex flex-col gap-5 rounded-lg p-10 text-white">
        <h4 class="text-3xl">Prerequisites</h4>
        <hr />
        <ul class="my-3 flex flex-col gap-2">
          {
            data.prerequisites.map((step: string) => (
              <li class="flex gap-2">
                <FaDotCircle className="text-primary-500 size-3 shrink-0 mt-[6px]" />
                <div set:html={step} />
              </li>
            ))
          }
        </ul>
        <a
          href="/enrollment-form"
          class="btn-secondary hover:border-primary-500! border-white! text-white!"
          >Sign Up</a
        >
      </div>

      <div
        class="flex flex-col gap-5 rounded-lg bg-white p-10 shadow-[0_0_25px_rgb(239,112,22)]"
      >
        <div class="bg-primary-500 w-fit rounded-full p-3">
          <FaHelicopter className="size-10 text-white" />
        </div>
        <h4 class="text-3xl">Discovery Flight</h4>
        <hr />
        <p class="text-sm tracking-wider text-gray-700 lg:text-base">
          If you are not sure about starting the program, you can schedule a
          discovery flight with us.
        </p>
        <a
          href="/discovery-flight"
          class="btn-secondary text-primary-500! border-primary-500! w-full px-5! whitespace-nowrap hover:text-white!"
          target="_blank">Schedule Now</a
        >
      </div>
    </aside>
  </div>

  <CTA
    text="Ready to take the next step and make your pilot dreams a reality?"
  />
</section>
