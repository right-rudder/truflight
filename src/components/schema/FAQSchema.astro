---
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  faqs: FAQItem[];
  name?: string;
}

const { faqs, name = "Frequently Asked Questions" } = Astro.props;

const schema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  name: name,
  mainEntity: faqs.map((faq, index) => ({
    "@type": "Question",
    "@id": `#faq-${index + 1}`,
    name: faq.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: faq.answer,
    },
  })),
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema, null, 2)} />
