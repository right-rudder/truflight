---
interface BreadcrumbItem {
  name: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav class="mx-auto max-w-7xl px-4 py-4 lg:px-12" aria-label="Breadcrumb">
  <ol class="flex items-center space-x-2 text-sm text-gray-600">
    <li>
      <a href="/" class="text-primary-500 hover:text-primary-600 font-medium">
        Home
      </a>
    </li>
    {
      items.map((item, index) => (
        <li class="flex items-center">
          <svg
            class="mx-2 h-5 w-5 text-gray-400"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              fill-rule="evenodd"
              d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
              clip-rule="evenodd"
            />
          </svg>
          {item.href ? (
            <a
              href={item.href}
              class="text-primary-500 hover:text-primary-600 font-medium"
            >
              {item.name}
            </a>
          ) : (
            <span class="font-medium text-gray-900" aria-current="page">
              {item.name}
            </span>
          )}
        </li>
      ))
    }
  </ol>
</nav>
