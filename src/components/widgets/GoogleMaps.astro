---
import { ADDRESS, PHONE_NUMBER } from "../../consts";

interface Props {
  data: {
    upperHeader?: string;
    title?: string;
    description?: string;
    mapsLink?: string;
    mapsTitle?: string;
  }
}

const {
  data: {
    upperHeader = "Where You Can Find Us",
    title = "Come Meet TruFlight Academy",
    description = "Our primary training location is north of Dallas, providing efficient access while maintaining a focused training environment.",
    mapsLink = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3325.7423611282325!2d-96.65255772383931!3d33.53408354491213!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x864c637f6e480445%3A0x733dcd3f2f095140!2sTruFlight%20Academy!5e0!3m2!1sen!2sbr!4v1770321048126!5m2!1sen!2sbr",
    mapsTitle = "TruFlight Academy location map"
  }
} = Astro.props;
---

<section class="overflow-hidden py-16 bg-white md:py-24">
  <div class="mx-auto max-w-7xl px-4 md:px-8 lg:px-12">
    <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-12">
      <div class="flex flex-col gap-6 lg:col-span-5">
        <div>
          <span class="mb-2 text-primary-500 block text-sm font-bold tracking-wider uppercase">
            {upperHeader}
          </span>
          <h2 class="text-3xl leading-tight font-bold md:text-4xl lg:text-5xl">
            {title}
          </h2>
        </div>

        <p class="text-lg leading-relaxed text-accent-400" set:html={description} />

        <div>
          <div class="mb-4 flex items-start gap-4">
            <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-primary-50 text-primary-500">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-bold">Our Address</h4>
              <p class="text-accent-400">{ADDRESS}</p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-primary-50 text-primary-500">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
            </div>
            <div>
              <h4 class="font-bold">Contact Us</h4>
              <a href={`tel:${PHONE_NUMBER}`} class="font-bold transition-colors text-primary-500 hover:text-black">
                {PHONE_NUMBER}
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="h-full min-h-[400px] md:min-h-[500px] lg:col-span-7">
        <div
          class="h-full w-full overflow-hidden rounded-md shadow-xl"
        >
          <iframe
            src={mapsLink}
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title={mapsTitle}></iframe>
        </div>
      </div>
    </div>
  </div>
</section>
