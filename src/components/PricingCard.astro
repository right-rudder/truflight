---
const { name, description, price, unit, features, note, link } = Astro.props;
---

<div
  class="group/tier data-featured:ring-primary-600 rounded-3xl p-8 shadow-[0_0_25px_rgb(239,112,22)] ring-1 ring-gray-200 data-featured:ring-2"
>
  <div class="flex items-center justify-between gap-x-4">
    <h3
      id="tier-tier-hobby"
      class="group-data-featured/tier:text-primary-600 text-xl/8 font-bold text-gray-900 lg:text-2xl/8"
    >
      {name}
    </h3>
  </div>
  <p class="mt-4 text-sm/6 text-gray-800">
    {description}
    {
      note && (
        <span class="mt-2 block text-xs text-gray-600 italic">*{note}</span>
      )
    }
  </p>
  <p
    class="mt-6 flex items-baseline gap-x-1 group-not-has-[[name=frequency][value=monthly]:checked]/tiers:hidden"
  >
    <span class="text-4xl font-semibold tracking-tight text-gray-900"
      >${price}</span
    >
    <span class="text-sm/6 font-semibold text-gray-600">{unit}</span>
  </p>
  <a
    href={link}
    target="_blank"
    aria-describedby="tier-hobby"
    class="btn-secondary text-primary-500! border-primary-500! mt-6 w-full! justify-center! px-5! whitespace-nowrap hover:text-white!"
  >
    Sign Up</a
  >
  <ul role="list" class="mt-8 space-y-3 text-sm/6 text-gray-600">
    {
      features.map((feature: String) => (
        <li class="flex gap-x-3">
          <svg
            viewBox="0 0 20 20"
            fill="currentColor"
            data-slot="icon"
            aria-hidden="true"
            class="text-primary-600 h-6 w-5 flex-none"
          >
            <path
              d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z"
              clip-rule="evenodd"
              fill-rule="evenodd"
            />
          </svg>
          {feature}
        </li>
      ))
    }
  </ul>
</div>
