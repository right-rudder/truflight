---
import { FaCheck } from "react-icons/fa";
import ImageComp from "../components/ImageComp.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import ServiceSchema from "../components/schema/ServiceSchema.astro";
import RelatedCourses from "../components/RelatedCourses.astro";
import Breadcrumb from "../components/Breadcrumb.astro";

// Discovery Flight service data for schema
const discoveryFlightService = {
  name: "Helicopter Discovery Flight",
  description:
    "Take the controls and experience the thrill of flying with a Discovery Flight at TruFlight Academy. Fly our modern Cabri G2 helicopter and see what it's like to be a pilot.",
  url: "https://www.truflightacademy.com/discovery-flight",
  price: "$195",
  duration: "PT1H", // 1 hour in ISO 8601 duration format
  category: "Recreational Flight Experience",
  areaServed: ["Dallas, TX", "North Texas", "Sherman, TX", "McKinney, TX"],
};
---

<ServiceSchema service={discoveryFlightService} />

<BaseLayout
  siteTitle="Helicopter Discovery Flight in Dallas, TX | TruFlight Academy"
  siteDescription="Take the controls and experience the thrill of flying with a Discovery Flight at TruFlight Academy in Dallas, TX. Fly our modern Cabri G2 helicopter for just $195 and see what it's like to be a pilot. Book your Discovery Flight today!"
  siteKeywords="helicopter discovery flight Dallas, helicopter experience Dallas, first helicopter flight Texas, trial lesson helicopter Dallas, helicopter rides Dallas, discovery flight North Texas, helicopter training introduction Dallas, try flying helicopter Texas"
>
  <Breadcrumb
    items={[
      { name: "Services", href: "/discovery-flight" },
      { name: "Discovery Flight" },
    ]}
  />

  <section class="bg-primary-50/50 mt-18 flex flex-col lg:mt-24 lg:flex-row">
    <div
      class="mx-auto flex max-w-screen-sm flex-col gap-3 px-5 py-10 lg:mx-0 lg:min-w-[640px] lg:px-28 lg:py-28"
    >
      <h2 class="text-primary-500 block text-lg font-bold">
        Book a Discovery Flight
      </h2>
      <p
        class="text-dark-blue font-display mb-5 text-5xl leading-tight font-bold"
      >
        Experience the Thrill of Flight with a Discovery Flight
      </p>
      <p class="my-2 text-lg text-pretty text-gray-700">
        You can take the controls of our brand new <a
          href="/about/our-fleet"
          class="text-primary-500 font-semibold hover:underline"
          >Cabri G2 helicopter</a
        >. Feel the joy and excitement of a "Tru" Flight!
      </p>
      <p class="text-sm tracking-wide text-gray-600 italic">
        <strong class="text-primary-500 font-semibold">Disclaimer!</strong> TruFlight
        is not responsible for any lingering desire to fly helicopters....but we
        can certainly get you more <a
          href="/pilot-training/private-pilot"
          class="text-primary-500 font-semibold hover:underline">flight time</a
        >.
      </p>
      <a
        href="/about/our-chief-pilot#credentials"
        target="_blank"
        class="bg-dark-gray flex w-fit items-center gap-3 rounded-full px-4 py-1.5 font-semibold text-white duration-300 hover:scale-105"
      >
        <FaCheck className="text-primary-500" />
        Todd's got you covered
      </a>
      <p
        class="text-accent-400 max-w-lg text-sm font-medium tracking-wider lg:text-base/6"
      >
        Price: $195
      </p>
      <a
        href="https://truflight.azurewebsites.net/flight/discovery"
        target="_blank"
        class="btn-secondary mt-3">Schedule Discovery Flight</a
      >
    </div>
    <div class="h-screen w-full">
      <ImageComp
        alt="Discovery Flight Fun at TruFlight Academy"
        src="/src/assets/discovery-flight-fun-at-truflight-academy.jpg"
        classes="w-full h-full object-cover"
        quality={100}
      />
    </div>
  </section>

  <RelatedCourses currentCourse="Discovery Flight" />
</BaseLayout>
